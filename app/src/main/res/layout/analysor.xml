<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cadnas_fond"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:weightSum="1">


        <!-- Bouton -->
        <ImageButton
            android:id="@+id/bouton_analysor"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/analyser"
            android:contentDescription="@string/analysor"
            />

        <!-- Titre -->
        <TextView
            android:text="@string/analyse_titre"
            android:id="@+id/analysor_titre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/titre3"
            android:paddingTop="10dp"/>


        <!-- saisie a tester -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!--  saisie caracteres -->
            <TextView
                android:id="@+id/alert_long"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textAppearance="@style/texte_note" />

        </LinearLayout>

        <!-- resultat graphique -->
        <ProgressBar
            android:id="@+id/resultat_graphique"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/echelle_analyse"
            android:layout_marginTop="10dp"/>


    <!-- infos resultats -->
    <TextView
        android:id="@+id/info_analyse"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:textAppearance="@style/titre2"
        android:background="@drawable/encadre_gris"
        android:layout_marginTop="20dp"/>

    </LinearLayout>


</ScrollView>
