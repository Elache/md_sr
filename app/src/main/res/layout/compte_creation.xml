<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/cadnas"
              android:orientation="vertical"
              android:paddingLeft="5dp"
              android:paddingRight="5dp">

    <!-- titre -->
    <TextView
        android:id="@+id/creation"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/compte_titre"
        android:textAppearance="@style/titre2"
        android:layout_marginTop="5dp"/>

    <!-- EncadrÃ© du formulaire -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/encadre_gris"
        android:orientation="vertical">

        <!-- nom utilisateur -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- intitule -->
            <TextView
                android:id="@+id/user_nom_titre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:text="@string/user_nom"
                android:textAppearance="@style/texte_bleu"/>
            <!-- champ saisie -->
            <EditText
                android:id="@+id/user_nom"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/linearborder"
                android:hint="@string/invite_remplir"
                android:inputType="text"
                android:padding="2dp"
                android:textAppearance="@style/texte_bleu" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:columnCount="3">


            <!-- Mot de passe 1 -->

            <!-- intitule -->

            <TextView
                android:id="@+id/user_pass1_titre"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_column="0"
                android:layout_gravity="end"
                android:layout_row="1"
                android:padding="5dp"
                android:text="@string/user_pass1"
                android:textAppearance="@style/texte_bleu"/>
            <!-- champ saisie -->
            <EditText
                android:id="@+id/user_pass1"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_column="1"
                android:layout_row="1"
                android:background="@drawable/linearborder"
                android:hint="@string/invite_remplir"
                android:inputType="textPassword"
                android:padding="2dp"
                android:textAppearance="@style/texte_bleu"/>
            <!-- intitule confirm -->
            <TextView
                android:id="@+id/user_pass1_confirmer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="end"
                android:layout_row="2"
                android:paddingBottom="10dp"
                android:paddingRight="5dp"
                android:paddingEnd="5dp"
                android:text="@string/pass_confirm"
                android:textAppearance="@style/texte_simple"/>
            <!-- champ confirm -->
            <EditText
                android:id="@+id/user_pass1_confirm"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_column="2"
                android:layout_row="2"
                android:background="@drawable/linearborder"
                android:hint="@string/invite_remplir"
                android:inputType="textPassword"
                android:padding="2dp"
                android:textAppearance="@style/texte_bleu"/>


            <!-- Mot de passe 2 secours -->

            <!-- intitule -->
            <TextView
                android:id="@+id/user_pass2_titre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:paddingTop="5dp"
                android:text="@string/user_pass2"
                android:textAppearance="@style/texte_bleu"/>
            <!-- champ saisie -->
            <EditText
                android:id="@+id/user_pass2"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_column="1"
                android:layout_row="4"
                android:background="@drawable/linearborder"
                android:hint="@string/invite_remplir"
                android:inputType="textPassword"
                android:padding="2dp"
                android:textAppearance="@style/texte_bleu"/>
            <!-- intitule confirm -->
            <TextView
                android:id="@+id/user_pass2_confirmer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="end"
                android:layout_row="5"
                android:paddingRight="5dp"
                android:paddingEnd="5dp"
                android:text="@string/pass_confirm"
                android:textAppearance="@style/texte_simple"/>
            <!-- champ confirm -->
            <EditText
                android:id="@+id/user_pass2_confirm"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_column="2"
                android:layout_row="5"
                android:background="@drawable/linearborder"
                android:hint="@string/invite_remplir"
                android:inputType="textPassword"
                android:padding="2dp"
                android:textAppearance="@style/texte_bleu"/>


        </GridLayout>





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@drawable/linearborder"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <!-- EN LIGNE -->
            <CheckBox
                android:id="@+id/mettre_en_ligne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="@string/mettre_en_ligne"
                android:theme="@android:style/Theme.Holo.Light"
                android:textAppearance="@style/texte_simple"
                android:background="@color/gris_clair"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:paddingTop="15dp"/>


            <ImageButton
                android:id="@+id/bouton_enligne_help"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/aide_analyse"
                android:contentDescription="@string/bouton_enligne_help"/>



        </LinearLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@drawable/linearborder"
            android:orientation="vertical"
            android:padding="5dp"
            android:paddingTop="15dp">

            <!-- bouton valider -->
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@drawable/linearborder"
            android:orientation="vertical"
            android:padding="5dp"
            android:paddingTop="5dp">

        <Button
                android:id="@+id/bouton_creation"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/mp_sr"
                android:padding="3dp"/>

            <!-- Titre valider -->
            <TextView
                android:id="@+id/titre_creation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:paddingLeft="5dp"
                android:layout_gravity="center"
                android:paddingTop="5dp"
                android:text="@string/bouton_valider"
                android:textAppearance="@style/texte_bleu"/>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>



</LinearLayout>

    </ScrollView>